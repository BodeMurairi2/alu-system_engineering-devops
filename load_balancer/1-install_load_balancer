#!/usr/bin/env bash
# Install and configure HAProxy with web-01 and web-02 backend servers

sudo apt-get update
sudo apt-get -y install software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-1.8
sudo apt-get update
sudo apt-get -y install haproxy=1.8.*

# Write a fresh haproxy.cfg with the required config
sudo tee /etc/haproxy/haproxy.cfg > /dev/null <<EOF
global
    log /dev/log    local0
    maxconn 4096
    user haproxy
    group haproxy
    daemon

defaults
    mode http
    log global
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web-01 34.236.171.16:80 check
    server web-02 3.236.14.41:80 check
EOF

# Restart haproxy to apply the new config
sudo service haproxy restart

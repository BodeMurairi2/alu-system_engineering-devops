#!/usr/bin/env bash
# Configure Nginx so that its HTTP response contains a custom header

set -e

# Install Nginx
apt-get update -y
apt-get install -y nginx

# Set the hostname in a variable
HOSTNAME=$(hostname)

# Create index.html
echo "Hello World!" > /usr/share/nginx/html/index.html

# Create custom 404 page
mkdir -p /var/www/html
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Backup the original config
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Insert the custom header into the location / block
sed -i "/location \/ {/a \\\tadd_header X-Served-By $HOSTNAME;" /etc/nginx/sites-available/default

# Add redirect and custom error page
sed -i "/location \/ {/a \\\tlocation /redirect_me {\n\t\treturn 301 \$scheme://www.google.com;\n\t}" /etc/nginx/sites-available/default
sed -i "/server_name _;/a \\\terror_page 404 /custom_404.html;" /etc/nginx/sites-available/default

# Restart nginx
nginx -t && systemctl restart nginx

# Done
echo "âœ… Nginx configured with custom header X-Served-By: $HOSTNAME"

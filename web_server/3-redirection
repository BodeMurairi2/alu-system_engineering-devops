#!/usr/bin/env bash
# Installs Nginx and configures a 301 redirect from /redirect_me

# Install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Create index page
echo "Holberton School for the win!" > /var/www/html/index.html

# Configure redirect in Nginx default config
# Ensure we're editing the correct block
sudo sed -i '/listen 80 default_server;/a \\tlocation /redirect_me {\n\t\treturn 301 https://www.holbertonschool.com;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx using service (not systemctl)
sudo service nginx restart

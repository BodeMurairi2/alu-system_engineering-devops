#!/usr/bin/env bash
# Sets up nginx with a custom 404 page containing "Ceci n'est pas une page"

# Update and install nginx
apt-get update -y
apt-get install nginx -y

# Create the index page
echo "Holberton School for the win!" > /var/www/html/index.html

# Create the custom 404 page in /var/www/html
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Modify default nginx config to use the custom 404 page
sed -i '/listen 80 default_server;/a \\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /var/www/html;\n\t}' /etc/nginx/sites-available/default

# Restart nginx using 'service' (not systemctl)
service nginx restart

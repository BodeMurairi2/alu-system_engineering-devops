#!/usr/bin/env bash
# Installs Nginx and sets up a custom 404 page

# Update package list and install nginx
apt-get update -y
apt-get install nginx -y

# Create index page
echo "Holberton School for the win!" > /var/www/html/index.html

# Create custom 404 error page
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Update nginx config to use the custom 404 page
sed -i '/listen 80 default_server;/a \\terror_page 404 /custom_404.html;\n\tlocation = /custom_404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Restart nginx without systemctl
service nginx restart
